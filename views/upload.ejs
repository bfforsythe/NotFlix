<head>
    <title>Upload Movie</title>
</head>

<%- include('./partials/head.ejs') %>
<%- include('./partials/userCheck.ejs') %>

<body>
    <div class="wrapper">
        <%- include('./partials/nav.ejs') %>
    <form action="/uploadMovie" method="post" id="movieForm">
        <div class="hcSquare">
            <input type="hidden" id="views" name="views" value="<%= movie.views %>">
            <label> Title: </label>
                <input type="text" placeholder="Enter Title" id="title" name="title" value="<%= movie.title %>" required>
                <br>
            <label> Video ID: </label>
                <input type="text" placeholder="Enter ID" id="ID" name="ID" value="<%= movie.url %>" required>
                <br>
            <label> Genre:</label>
                <select id="genre" name="genre" value="<%= movie.genre %>" required>
                    <option selected disabled hidden>Select</option>
                    <% for(var i = 0; i < genres.length;i++){ %>
                        <% if (genre == genres[i]){ %>
                            <option selected value=<%=genres[i]%>> <%= genres[i] %> </option>
                        <% }else{ %>
                            <option value=<%=genres[i]%>> <%= genres[i] %> </option>
                        <% } %>
                    <% } %>
                </select>
                <br>
            <label> Description: </label>
                <input type="text" placeholder="Enter Description" id="description" name="description" value="<%= movie.description %>" required>
                <br>
            <button type="button" onclick="submitForm()"> Upload</button>
        </div>
    </form>
    </div>

</body>

<script>
    function submitForm(){
        alert("Movie successfully submitted.");
        document.getElementById("movieForm").submit();
    }
</script>
