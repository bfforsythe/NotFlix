<head>
    <style>
        Body {
            font-family: "Comic Sans MS", "Comic Sans", cursive;
            background-image: url('/images/netflixBG.png');
            background-repeat: no-repeat;
            background-size: cover;
            display: flex;
        }

        .titleRectangle {
            height: 50px;
            width: 250px;
            background-color: white;
            font-size: larger;
        }

        .wrapper {
            margin: 0 auto;
            margin-top: 200px;

        }

        .subText{
            font-size: small
        }
        #passMessage{
            display:none;
            background: white;
            color:black;
            position:absolute;
            padding-left: 50px;
            margin-left: 250px;
            margin-top: -300px;
        }
        #userMessage{
            display:none;
            background: white;
            color:black;
            position:absolute;
            padding-left: 50px;
            margin-left: 250px;
            margin-top: -300px;
        }

        .valid{
            color:green;
        }
        .valid:before {
            position:relative;
            left: -35px;
            content: "✔️";
        }

        .invalid{
            color:red;
        }
        .invalid:before {
            position: relative;
            left: -35px;
            content: '❌' ;
        }        
        .hcSquare{
        padding: 10%;
        height: flex;
        width: flex;
        background-color: white;
        }
        
        .slideshow-container {
        max-width: 1000px;
        position: relative;
        margin: auto;
        }

        .prev, .next {
        cursor: pointer;
        position: absolute;
        top: 50%;
        width: auto;
        margin-top: -22px;
        padding: 16px;
        color: white;
        font-weight: bold;
        font-size: 18px;
        transition: 0.6s ease;
        border-radius: 0 3px 3px 0;
        user-select: none;
        }

        /* Position the "next button" to the right */
.next {
  right: 0;
  border-radius: 3px 0 0 3px;
}

/* On hover, add a black background color with a little bit see-through */
.prev:hover, .next:hover {
  background-color: rgba(0,0,0,0.8);
}

.mySlides{
    display:none;
}


