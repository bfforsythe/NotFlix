<head>
    <style>
        Body {
            font-family: "Comic Sans MS", "Comic Sans", cursive;
            background-image: url('/images/netflixBG.png');
            background-repeat: no-repeat;
            background-size: cover;
            display: flex;
        }

        .titleRectangle {
            height: 50px;
            width: 250px;
            background-color: white;
            font-size: larger;
        }

        .wrapper {
            margin: 0 auto;
            margin-top: 200px;

        }

        .subText{
            font-size: small
        }
        #passMessage{
            display:none;
            background: white;
            color:black;
            position:absolute;
            padding-left: 50px;
            margin-left: 250px;
            margin-top: -300px;
        }
        #userMessage{
            display:none;
            background: white;
            color:black;
            position:absolute;
            padding-left: 50px;
            margin-left: 250px;
            margin-top: -300px;
        }

        .valid{
            color:green;
        }
        .valid:before {
            position:relative;
            left: -35px;
            content: "✔️";
        }

        .invalid{
            color:red;
        }
        .invalid:before {
            position: relative;
            left: -35px;
            content: '❌' ;
        }        
        .hcSquare{
        padding: 10%;
        height: flex;
        width: flex;
        background-color: white;
        }

        .center {
        margin: auto;
        max-width: 640px;
        }

        .easterEgg:hover{
        display:block;
        animation: blink 5s infinite;
        }
        @keyframes blink{
        0% {
            color: red;
        }
        20% {
            color: green;
        }
        40% {
            color: fuchsia;
        }
        60% {
            color: teal;
        }
        80% {
            color: violet;
        }
        100% {
            color: turquoise;
        }
        }


    </style>
</head>